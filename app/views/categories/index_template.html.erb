<%= render partial: 'layouts/navbar' %>
<div>
		<!-- RANKING CONTAINER OPEN -->
    <div id="cat-index-container">
			<div infinite-scroll="increaseLimit()">
				<h1 class="div-headers">CATEGORY INDEX OF WEBSITES</h1>
				<!-- CATEGORIES OPEN -->
				<div class="row cat-row">
			  		<div id="categories-sect">
					  <div class="large-3 columns">
						  <dl class="sub-nav">
							<dt>CATEGORIES:</dt>
	            <hr>
				          	<div ng-repeat="c in categoryList">
				          		<div class="row cat-list">
									<dd ng-class="{active:isSet(c.id)}" class="cat-list">
				              			<a ng-click="setClick(c.id)" >{{ c.name }}</a>
				            		</dd>
				          		</div>
				          	</div>
						  </dl>
					  </div>
					</div>
				  <div id="rank-disp-sect">
	          <input type="text" ng-model="search.url_title" id="input-search" placeholder="Start typing to search">
				    <div ng-repeat="c in categoryList" ng-init="predicate = 'url_title'">
				      <div ng-if="c.websites.length > 0">
				      	<div class="columns-container">
		  		      <div class="animate-repeat" ng-repeat="website in c.websites | orderBy:predicate | filter:search | limitTo:quantity">
<!-- 			  		        <div class="large-8 columns disp" ng-show="isSet(c.id)">
			  		      	  <div class="rank-row">
			                  <span class="web-url">
													<img class="fav-rank-disp" src={{website.favicon}}>
			                  	<a href="/websites/{{website.id}}">{{website.url_title}}</a></span>

												<div class="web-ups">
				  		            <span class="website_{{website.id}}_up">{{ website.ups }}</span>
				  		            <a href="/websites/{{website.id}}/up" data-method="post" data-remote="true"><i class="fi-arrow-up"></i></a>
				  		          </div>
			                </div>
			  		        </div> -->
			  		      <div class="large-8 columns disp" ng-show="isSet(c.id)">
			  		      	<div class="top-line-grid" ng-mouseover="gridHoverOn(website)" ng-mouseleave="gridHoverOff(website)" ng-class="{'top-line-change':	gridChange === true}">
			  		      	 	<a href="/websites/{{website.id}}">
			  		      	 		<div class="rank-row">
				                  <span class="web-url">
														<img class="fav-rank-disp" src={{website.favicon}}>
				                  	<span class="dotcom">{{website.url}}</span>
				                  </span>
				                 </div>  
					            </a>
											<div class="web-ups">
			  		            <span class="website_{{website.id}}_up here">{{ website.ups }}</span>
			  		            <a href="/websites/{{website.id}}/up" data-method="post" data-remote="true"><i class="fa fa-arrow-circle-o-up rank-arrow" ng-click="setIcon(website)" ng-class="{'fa fa-arrow-circle-up': website.clicked === true}"></i></a>
	  		          		</div>      	
		              	</div>
		            	</div> 
		  		      </div>
		  		    </div>
				     </div>
				    </div>    
				  </div>
				</div>
				<!-- CATEGORIES CLOSE -->

				
			</div>
			<!-- RANKING CONTAINER CLOSE -->
		</div>
</div>